
@model PagedList.IPagedList<SparshWeb.Models.CommitteeMemberViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Committee Members List</h4>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div class="table">

    <div class="row header blue" style="font-size:small;">
        <div class="cell">Action</div>
        <div class="cell">ID</div>
        <div class="cell">Name</div>
        <div class="cell">MemberGroup</div>
        <div class="cell">Flat</div>
        <div class="cell">Contact</div>
        <div class="cell">Active?</div>
    </div>
    @foreach (var item in Model)
    {
    <div class="row" style="font-size:small;">
        <div class="cell">
            @Html.ActionLink("Edit", "Edit", new { id = item.MemderId }) |
            @Html.ActionLink("Details", "Details", new { id = item.MemderId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MemderId })
        </div>
        <div class="cell">@Html.DisplayFor(modelItem => item.MemderId)</div>
        <div class="cell">@Html.DisplayFor(modelItem => item.DisplayName)</div>
        <div class="cell">@Html.DisplayFor(modelItem => item.MemberGroup)</div>
        <div class="cell">@Html.DisplayFor(modelItem => item.MemberFlat)</div>
        <div class="cell">@Html.DisplayFor(modelItem => item.Contact)</div>
        <div class="cell">@Html.DisplayFor(modelItem => item.IsActive)</div>
    </div>
    }

</div>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))
